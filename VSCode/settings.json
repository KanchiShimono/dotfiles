{
  "editor.fontSize": 12,
  "editor.fontFamily": "Monaco",
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "all",
  "editor.renderIndentGuides": true,
  "editor.suggestSelection": "first",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.rulers": [
    80, 100
  ],
  "editor.find.globalFindClipboard": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[jsx-tags]": {
    "editor.tabSize": 2,
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features",
  },
  "[markdown]": {
    "editor.tabSize": 2,
    // Override because default setting for markdown is enable wordWrap
    "editor.wordWrap": "off",
  },

  "explorer.compactFolders": true,

  "files.autoSave": "off",
  "files.autoGuessEncoding": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,
  "workbench.editor.splitSizing": "distribute",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.openMode": "singleClick",
  "workbench.fontAliasing": "default",
  "workbench.activityBar.visible": true,
  "workbench.settings.editor": "json",

  "problems.showCurrentInStatus": true,

  "search.smartCase": true,
  "search.showLineNumbers": true,
  "search.location": "panel",
  "search.searchOnType": true,
  "search.collapseResults": "auto",

  "update.mode": "none",

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
  },
  "emmet.syntaxProfiles": {
    "html": {
      "attr_quotes": "single",
    },
    "jsx": {
      "self_closing_tag": true,
    },
  },

  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": false,

  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.hlsearch": true,
  "vim.searchHighlightColor": "rgba(199, 192, 145, 0.5)",
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.whichwrap": "h,l,<,>,[,]",
  "vim.useCtrlKeys": true,
  "vim.handleKeys": {
    "<C-d>": true,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo",
          "args": []
        }
      ]
    },
    {
      "before": ["<Esc>"],
      "after": [],
      "commands": [
        {
          "command": ":nohl",
          "args": []
        }
      ]
    }
  ],

  "path-intellisense.showHiddenFiles": true,

  "vsintellicode.java.completionsEnabled": true,
  "vsintellicode.python.completionsEnabled": true,
  "vsintellicode.typescript.completionsEnabled": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "C_Cpp.intelliSenseEngine": "Default",
  "C_Cpp.intelliSenseEngineFallback": "Disabled",
  "C_Cpp.loggingLevel": "Information",

  // "java.home": "/Library/Java/JavaVirtualMachines/jdk1.8.0_152.jdk/Contents/Home",
  "java.home": "/Library/Java/JavaVirtualMachines/jdk-9.0.1.jdk/Contents/Home",
  "java.format.enabled": true,

  // Enable eslint instread of built in checker
  "eslint.enable": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue"
  ],

  "python.pythonPath": "/usr/local/bin/python3",
  "python.jediEnabled": false,
  "python.formatting.provider": "yapf",
  "python.autoUpdateLanguageServer": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "flake8",
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--namespace-packages",
    "--show-column-numbers",
    "--ignore-missing-imports"
  ],
  "python.autoComplete.addBrackets": true,
  "python.dataScience.sendSelectionToInteractiveWindow": true,
  "pyright.useLibraryCodeForTypes": true,

  "julia.executablePath": "/Applications/Julia-1.2.app/Contents/Resources/julia/bin/julia",
  "julia.runLinter": true,

  // Disable built in checker
  "javascript.validate.enable": false,
  "javascript.format.enable": true,

  "go.buildOnSave": "off",
  "go.languageServerExperimentalFeatures": {
    "format": true,
  },
  "go.useLanguageServer": true,
  "gopls": {
    "usePlaceholders": true,
    "completionDocumentation": true,
    "completeUnimported": true,
    "deepCompletion": true,
    "matcher": "fuzzy",
    "hoverKind": "FullDocumentation",
    "staticcheck": true
  },

  "languageServerHaskell.hlintOn": true,
  "languageServerHaskell.maxNumberOfProblems": 100,
  "languageServerHaskell.useHieWrapper": true,

  "bracketPairColorizer.forceUniqueOpeningColor": false,
  "bracketPairColorizer.colorMode": "Consecutive",
  "bracketPairColorizer.highlightActiveScope": true,

  "powermode.enabled": true,
  "powermode.enableShake": false,
  "powermode.presets": "fireworks"
}
