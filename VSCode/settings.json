{
  "editor.fontSize": 12,
  "editor.fontFamily": "Monaco",
  "editor.codeLensFontFamily": "Comic Sans MS",
  "editor.codeLensFontSize": 12,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.indentation": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "all",
  "editor.suggest.preview": true,
  "editor.suggestSelection": "first",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.rulers": [
    80, 88, 100
  ],
  "editor.find.globalFindClipboard": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },

  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[jsx-tags]": {
    "editor.tabSize": 2,
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "matklad.rust-analyzer"
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features",
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "mrmlnc.vscode-remark",
    "editor.tabSize": 4,
    // Override because default setting for markdown is enable wordWrap
    "editor.wordWrap": "off",
  },
  "[terraform]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "hashicorp.terraform"
  },

  "explorer.compactFolders": true,

  "files.autoSave": "off",
  "files.autoGuessEncoding": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "notebook.diff.enablePreview": true,
  "notebook.lineNumbers": "on",
  "notebook.showCellStatusBar": "visible",

  "git.enabled": true,
  "git.showCommitInput": true,
  "git.showProgress": true,

  "workbench.colorTheme": "SynthWave '84",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    // Respect for bracket-pair-colorizer colors
    "editorBracketHighlight.foreground1": "#ffd700", // Gold
    "editorBracketHighlight.foreground2": "#da70d6", // Orchid
    "editorBracketHighlight.foreground3": "#87cefa", // LightSkyBlue
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.splitSizing": "distribute",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.openMode": "singleClick",
  "workbench.fontAliasing": "default",
  "workbench.activityBar.visible": true,
  "workbench.settings.editor": "json",
  "workbench.editor.languageDetection": true,

  "problems.showCurrentInStatus": true,

  "search.mode": "view",
  "search.smartCase": true,
  "search.searchEditor.doubleClickBehaviour": "openLocationToSide",
  "search.showLineNumbers": true,
  "search.searchOnType": true,
  "search.collapseResults": "auto",

  "update.mode": "none",

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
  },
  "emmet.syntaxProfiles": {
    "html": {
      "attr_quotes": "single",
    },
    "jsx": {
      "self_closing_tag": true,
    },
  },

  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": false,

  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],

  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vimrc",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.hlsearch": true,
  "vim.searchHighlightColor": "rgba(199, 192, 145, 0.5)",
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.whichwrap": "h,l,<,>,[,]",
  "vim.useCtrlKeys": true,
  "vim.handleKeys": {
    "<C-d>": true,
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "after": [],
      "commands": [
        {
          "command": "undo",
          "args": []
        }
      ]
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [
        {
          "command": "redo",
          "args": []
        }
      ]
    },
    {
      "before": ["<Esc>"],
      "after": [],
      "commands": [
        {
          "command": ":nohl",
          "args": []
        }
      ]
    }
  ],

  "path-intellisense.showHiddenFiles": true,

  "vsintellicode.java.completionsEnabled": true,
  "vsintellicode.python.completionsEnabled": true,
  "vsintellicode.typescript.completionsEnabled": true,
  "vsintellicode.modify.editor.suggestSelection": "enabled",
  "vsintellicode.features.python.deepLearning": "enabled",

  "C_Cpp.intelliSenseEngine": "Default",
  "C_Cpp.intelliSenseEngineFallback": "Disabled",
  "C_Cpp.loggingLevel": "Information",

  "java.home": "/Library/Java/JavaVirtualMachines/adoptopenjdk-15.jdk/Contents/Home",
  "java.format.enabled": true,
  "java.configuration.runtimes": [
    {
      "default": true,
      "name": "JavaSE-1.8",
      "path": "/Library/Java/JavaVirtualMachines/adoptopenjdk-8.jdk/Contents/Home"
    }
  ],

  // Enable eslint instread of built in checker
  "eslint.enable": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue"
  ],

  "prettier.disableLanguages": [
    "markdown"
  ],

  "remark.format": {
    "rules": {
      "listItemIndent": "1",
      "incrementListMarker": false,
    }
  },

  "python.defaultInterpreterPath": "~/.pyenv/shims/python",
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--skip-string-normalization"
  ],
  "python.autoUpdateLanguageServer": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "flake8",
  "python.linting.flake8Args": [
    "--max-complexity=10"
  ],
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--strict",
    "--namespace-packages",
    "--show-column-numbers",
    "--ignore-missing-imports"
  ],
  "python.autoComplete.addBrackets": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",
  "jupyter.sendSelectionToInteractiveWindow": true,
  "jupyter.interactiveWindowMode": "perFile",
  "jupyter.experimental.debugging": true,
  "pyright.disableLanguageServices": false,
  "pyright.disableOrganizeImports": true,
  "pyright.useLibraryCodeForTypes": true,
  "autoDocstring.docstringFormat": "google",
  "autoDocstring.generateDocstringOnEnter": true,
  "autoDocstring.guessTypes": true,
  "autoDocstring.includeExtendedSummary": true,
  "autoDocstring.includeName": false,
  "autoDocstring.startOnNewLine": false,

  "julia.executablePath": "/usr/local/bin/julia",
  "julia.runLinter": true,
  "julia.symbolCacheDownload": true,
  "julia.enableTelemetry": false,

  // Disable built in checker
  "javascript.validate.enable": false,
  "javascript.format.enable": true,

  "go.buildOnSave": "off",
  "go.languageServerExperimentalFeatures": {
    "format": true,
  },
  "go.useLanguageServer": true,
  "gopls": {
    "usePlaceholders": true,
    "completionDocumentation": true,
    "completeUnimported": true,
    "deepCompletion": true,
    "matcher": "Fuzzy",
    "hoverKind": "FullDocumentation",
    "staticcheck": true,
    "gofumpt": true
  },

  "rust-analyzer.updates.channel": "stable",
  "rust-analyzer.updates.askBeforeDownload": true,

  "haskell.hlintOn": true,
  "haskell.maxNumberOfProblems": 100,

  "yaml.schemas": {
    "Kubernetes": "*.yaml",
    "Kustomization": "*.yaml"
  },
  "yaml.schemaStore.enable": true,
  "yaml.trace.server": "messages",

  "synthwave84.brightness": 0.7,

  "powermode.enabled": true,
  "powermode.enableShake": false,
  "powermode.presets": "fireworks"
}
