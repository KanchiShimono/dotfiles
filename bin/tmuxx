#!/bin/bash

if [ -z $TMUX ]; then
	tmux has-session >/dev/null 2>&1
	if [ $? = "0" ]; then
		ID="`tmux list-sessions`"
		if [ -z "$ID" ]; then
			tmux new-session
		fi
		create_new_session="New Session"
		ID="${create_new_session}:\n$ID"
		ID="`echo -e "$ID" | fzf | cut -d : -f 1`"
		if [ "$ID" = "$create_new_session" ]; then
			tmux new-session
		elif [ -n "$ID" ]; then
			tmux attach-session -t "$ID"
		else
			:
		fi
	else
		tmux new-session
	fi
fi

